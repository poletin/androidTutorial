<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_display_message"
    tools:context="com.knechtrickayzenpoletin.mirschmecktz.DisplayMessageActivity">
    <EditText
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:id="@+id/editText"
        android:layout_width="match_parent" />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mir schmeckt's"
        android:id="@+id/radioButtonSchmeckt" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mir schmeckt's nicht"
        android:id="@+id/radioButtonSchmecktNicht" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical"
        android:layout_marginBottom="80dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:onClick="onSaveEntry"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
